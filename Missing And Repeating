import java.util.ArrayList;

class Solution {
    ArrayList<Integer> findTwoElement(int arr[]) {
        int n = arr.length;

        // Sum of first n natural numbers
        long sN = (long) n * (n + 1) / 2;

        // Sum of squares of first n natural numbers
        long s2N = (long) n * (n + 1) * (2L * n + 1) / 6;

        long s = 0, s2 = 0;
        for (int num : arr) {
            s += num;               // sum of array elements
            s2 += (long) num * num; // sum of squares of array elements
        }

        // Difference between expected and actual sums
        long val1 = s - sN;    // x - y
        long val2 = s2 - s2N;  // x^2 - y^2

        val2 = val2 / val1;    // (x^2 - y^2) / (x - y) = x + y

        long x = (val1 + val2) / 2; // repeating number
        long y = x - val1;           // missing number

        ArrayList<Integer> result = new ArrayList<>();
        result.add((int) x); // repeating number
        result.add((int) y); // missing number

        return result;
    }
}
